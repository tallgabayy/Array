var arr = [] 
var x = parseInt(prompt("Enter number"))
while (x != -1 )
  {
    
    arr.push(x)
    x = parseInt(prompt("Enter number"))
  }

  var sum = 0
  for (var i = 0; i<arr.length; i = i+1)
{
  
  sum = sum + arr[i];
  
}
  
 
  console.log (`sum = ${sum}`)
console.log (`Average = ${sum / arr.length}`)
